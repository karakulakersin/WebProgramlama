@model IEnumerable<BlogSosyalMedya.Models.TatilYerleri>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.YerAdı)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sehir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ulke)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategori)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puani)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fotograf)
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.YerAdı)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sehir.SehirAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ulke.UlkeAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategori.KategoriAdı)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puani)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Fotograf)*@
                <img src="@Url.Content(item.Fotograf)" class="d-block w-75" asp-append-version="true" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
